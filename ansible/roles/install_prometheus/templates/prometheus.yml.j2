global:
  scrape_interval: 30s # Set the scrape interval to every 15 seconds. This defines how often Prometheus collects metrics.

scrape_configs:
  - job_name: 'prometheus' # Define a job named "prometheus".
    static_configs:
      - targets: ['localhost:9090'] # Targets for this job. Prometheus will scrape metrics from itself on port 9090.
